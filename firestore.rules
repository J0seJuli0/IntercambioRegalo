/**
 * @fileoverview Firestore Security Rules for GiftMatch application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and wishlists.
 * Access to gift exchanges and their participants is controlled through membership.
 * Chat message access is based on sender/recipient relationships and group membership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/wishlistItems/{wishlistItemId}: Stores wishlist items for a user.
 * - /giftExchanges/{giftExchangeId}: Stores gift exchange event details.
 * - /giftExchanges/{giftExchangeId}/participants/{exchangeParticipantId}: Stores participation data.
 * - /chatMessages/{chatMessageId}: Stores chat messages.
 *
 * Key Security Decisions:
 * - Users can only access their own profile data and wishlists.
 * - Gift exchange access is restricted to participants.
 * - Chat message access is restricted to senders, recipients, and participants of the associated gift exchange.
 * - Admins can create new users. Regular users cannot.
 *
 * Denormalization for Authorization:
 * - ExchangeParticipant documents include the giftExchangeId to avoid needing to traverse up the hierarchy for authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Protects user profile information.
     * @path /users/{userId}
     * @allow (get, list, write, delete) - Authenticated user can access and modify their own profile. Admins can create users.
     * @deny - An unauthenticated user cannot access or modify profiles. A user cannot modify another user's profile unless they are an admin.
     * @principle Enforces document ownership and role-based access.
     */
    match /users/{userId} {
      // We are creating a new document
      function isCreating() {
        return resource == null;
      }

      // We are updating an existing document
      function isUpdating() {
        return resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isSignedIn();
      allow write: if (isCreating() && (isAdmin() || request.resource.data.id == userId)) || (isUpdating() && isOwner(userId));
      allow delete: if isOwner(userId) && isUpdating();
    }

    /**
     * @description Protects wishlist items for a specific user.
     * @path /users/{userId}/wishlistItems/{wishlistItemId}
     * @allow (create, get, update, delete, list) - Authenticated user can manage their own wishlist items.
     * @deny (create, get, update, delete, list) - A user cannot manage another user's wishlist items.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/wishlistItems/{wishlistItemId} {
      // Any authenticated user can view a wishlist. Only owner can modify.
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Protects gift exchange event details.
     * @path /giftExchanges/{giftExchangeId}
     */
    match /giftExchanges/{giftExchangeId} {
      allow get: if true;
      allow list: if true; // TODO: Restrict listing to members of the exchange
      allow create: if isSignedIn(); // TODO: Add conditions for creating a gift exchange
      allow update: if false; // TODO: Add role-based update permissions (e.g., admin of the exchange)
      allow delete: if false; // TODO: Add role-based delete permissions (e.g., admin of the exchange)
    }

    /**
     * @description Protects user participation data in a gift exchange.
     * @path /giftExchanges/{giftExchangeId}/participants/{exchangeParticipantId}
     */
    match /giftExchanges/{giftExchangeId}/participants/{exchangeParticipantId} {
      function isParticipant(giftExchangeId, userId) {
        return exists(/databases/$(database)/documents/giftExchanges/$(giftExchangeId)/participants/$(userId));
      }

      allow get: if isSignedIn() && isParticipant(giftExchangeId, request.auth.uid);
      allow list: if isSignedIn() && isParticipant(giftExchangeId, request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.giftExchangeId == giftExchangeId && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && isParticipant(giftExchangeId, request.auth.uid) && request.resource.data.giftExchangeId == giftExchangeId;
      allow delete: if isSignedIn() && isParticipant(giftExchangeId, request.auth.uid) && request.resource.data.giftExchangeId == giftExchangeId;
    }

    /**
     * @description Protects chat messages.
     * @path /chatMessages/{chatMessageId}
     */
    match /chatMessages/{chatMessageId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.recipientId);
      allow list: if false; // Listing chat messages is disallowed.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.senderId;
      allow update: if false; // Chat messages cannot be updated.
      allow delete: if false; // Chat messages cannot be deleted.
    }
  }
}

    